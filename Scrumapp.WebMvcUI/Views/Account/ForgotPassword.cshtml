@using Scrumapp.WebMvcUI.Models.AccountViewModels
@model Scrumapp.WebMvcUI.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form asp-action="ForgotPassword" method="post">
                    <h4>Enter your email.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </section>
        </div>
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h4>About Scrumapp and Agile Methodology.</h4>
                <hr />
                <div>
                    <p>
                        This application provides many services to manage your any projects. This services configured to Agile methodology.
                        See <a href="http://agilemanifesto.org/">this article</a> for details on Agile and Scrum project management methodology.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
